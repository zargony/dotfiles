[user]
	name = Andreas Neuhaus
	email = zargony@zargony.com
[core]
	attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore
	precomposeunicode = true
	quotepath = false
[color]
	ui = auto
[alias]
	br = branch
	ci = commit
	co = checkout
	st = status
[pull]
	rebase = true
[rebase]
	autostash = true
[merge]
	conflictstyle = diff3
[push]
	default = upstream
[pack]
	threads = 0
[gc]
	autoDetach = false
[diff]
	compactionHeuristic = true
[diff "utf16diff"]
	textconv = iconv -f utf-16 -t utf-8
