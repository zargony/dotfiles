Compression yes
#CompressionLevel 6
ControlMaster auto
ControlPath ~/.ssh/master-%r@%h:%p
HashKnownHosts no
ServerAliveInterval 60

# Shortcuts for datacenter hosts
Host ariadne belana callisto daenerys
	HostName %h.dc.zargony.com
	User root
	ForwardAgent yes

# Connect to IPv6-only hosts using a proxy if IPv6 is unavailable
Host git.zargony.com
	ProxyCommand ~/.ssh/ipv6proxy daenerys %h %p

# Shortcuts for infrastructure hosts at home
Host ryoko nanostation glados octopi
	HostName %h.apn
	User root

Host glados
#	HostName some.dyndns.entry
#	Port 2222
	ForwardAgent yes
	LocalForward 5000 localhost:5000

Host lina
#	HostName some.dyndns.entry
#	Port 2225
	ForwardAgent yes
	LocalForward 5901 localhost:5900

Host octopi
	User pi

# Amazon EC2
Host *.amazonaws.com
	IdentityFile ~/.ssh/ec2.pem
	User root

# Shortcuts for project hosts
Host server4 server5 server8 rails-dev
	HostName %h.zwick.local
	User andreas
	ForwardAgent yes

Host server8
