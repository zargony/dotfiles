{
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.dragAndDrop": false,
    "editor.fontFamily": "Iosevka Slab",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.guides.bracketPairs": true,
    "editor.lineHeight": 20,
    "editor.minimap.showSlider": "always",
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [79, 99],
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "git.defaultCloneDirectory": "~/Projects",
    "git.mergeEditor": true,
    "git.suggestSmartCommit": false,
    "git.supportCancellation": true,
    "redhat.telemetry.enabled": false,
    "search.exclude": {
        "**/target": true,
        "**/vendor": true
    },
    "search.smartCase": true,
    "telemetry.telemetryLevel": "crash",
    "terminal.external.osxExec": "Warp.app",
    "terminal.integrated.fontSize": 14,
    "window.autoDetectColorScheme": true,
    "window.closeWhenEmpty": true,
    "window.newWindowDimensions": "inherit",
    "workbench.colorCustomizations": {
        "editorInlayHint.background": "#aaa2",
    },
    "workbench.colorTheme": "Eva Light",
    "workbench.fontAliasing": "auto",
    "workbench.iconTheme": "file-icons",
    "workbench.settings.editor": "json",
    "workbench.preferredDarkColorTheme": "Eva Dark",
    "workbench.preferredLightColorTheme": "Eva Light",

    "[json]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "modifications",
    },
    "[rust]": {
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.tabSize": 4,
        "editor.wordWrapColumn": 99
    },
    "[tf]": {
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "modifications",
        "editor.tabSize": 2,
    },
    "[toml]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "modifications",
        "editor.tabSize": 2,
    },
    "[yaml]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "modifications",
        "editor.tabSize": 2,
    },

    "crates.listPreReleases": true,

    "gitlens.currentLine.enabled": false,

    "gitProjectManager.baseProjectsFolders": ["~/Projects"],
    "gitProjectManager.displayProjectPath": true,
    "gitProjectManager.ignoredFolders": ["node_modules", "target"],
    "gitProjectManager.searchInsideProjects": false,
    "gitProjectManager.storeRepositoriesBetweenSessions": true,

    // "rust-analyzer.cargo.features": "all",
    // "rust-analyzer.cargo.features": [],
    // "rust-analyzer.cargo.noDefaultFeatures": true,
    // "rust-analyzer.checkOnSave.allTargets": true,
    // "rust-analyzer.checkOnSave.command": "clippy",
    // "rust-analyzer.checkOnSave.enable": false,
    // "rust-analyzer.checkOnSave.features": "all",
    // "rust-analyzer.checkOnSave.noDefaultFeatures": true,
    // "rust-analyzer.hover.actions.enable": false,
    // "rust-analyzer.inlayHints.chainingHints.enable": false,
    // "rust-analyzer.inlayHints.parameterHints.enable": false,
    // "rust-analyzer.inlayHints.typeHints.enable": false,
    "rust-analyzer.showUnlinkedFileNotification": false,

    "todohighlight.keywords": [
        "TODO",
        "OPTIMIZE",
        "NOTE",
        {
            "text": "FIXME",
            "backgroundColor": "#d05020",
            "overviewRulerColor": "#d05020",
            },
        {
            "text": "XXX",
            "backgroundColor": "#d02050",
            "overviewRulerColor": "#d02050",
        }
    ],
    "todohighlight.defaultStyle": {
        "color": "#eee",
        "backgroundColor": "#d0a020",
        "overviewRulerColor": "#d0a020",
        "border": "none",
        "borderRadius": "3px"
    },
    "todohighlight.include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.html",
        "**/*.css",
        "**/*.scss",
        "**/*.php",
        "**/*.rb",
        "**/*.tf",
        "**/*.toml",
        "**/*.txt",
        "**/*.mdown",
        "**/*.md",
        "**/*.rs",
        "**/*.yaml",
        "**/*.yml",
    ],

    "trailing-spaces.deleteModifiedLinesOnly": true,
    "trailing-spaces.trimOnSave": true,

    "vs-kubernetes": {
        "vs-kubernetes.kubectl-path": "/opt/homebrew/bin/kubectl",
        "vs-kubernetes.helm-path": "/opt/homebrew/bin/helm",
    },

    "vsicons.dontShowNewVersionMessage": true,
}
