{
    "editor.fontFamily": "FiraCode-Light",
    "editor.fontSize": 13,
    "editor.lineHeight": 16,
    "editor.lineNumbers": "on",
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.renderIndentGuides": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "window.reopenFolders": "all",
    "search.exclude": {
        "**/target": true
    },
    "trailing-spaces.deleteModifiedLinesOnly": true,
    "trailing-spaces.trimOnSave": true,
    "rust.rustLangSrcPath": "/Users/zargony/.rustup/toolchains/stable-x86_64-apple-darwin/lib/rustlib/src/rust/src",
    //"rust.checkOnSave": true,
    "rust.checkWith": "check",
    "rust.useJsonErrors": true
}
