{
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.dragAndDrop": false,
	"editor.fontFamily": "Iosevka Slab",
	"editor.fontLigatures": true,
	"editor.fontSize": 16,
	"editor.insertSpaces": false,
	"editor.lineNumbers": "on",
	"editor.lineHeight": 20,
	"editor.minimap.enabled": true,
	"editor.minimap.showSlider": "always",
	"editor.renderControlCharacters": true,
	"editor.renderIndentGuides": true,
	"editor.renderLineHighlight": "all",
	"editor.renderWhitespace": "boundary",
	"editor.tabSize": 4,
	"explorer.confirmDelete": false,
	"workbench.colorTheme": "Solarized Dark",
	"workbench.fontAliasing": "auto",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.settings.editor": "json",
	"window.closeWhenEmpty": true,
	"window.newWindowDimensions": "inherit",
	"window.restoreWindows": "all",
	"explorer.openEditors.visible": 0,
	"search.exclude": {
		"**/target": true,
		"**/vendor": true
	},
	"search.smartCase": true,
	"terminal.external.osxExec": "iTerm.app",
	"terminal.integrated.fontSize": 14,

	"crates.listPreReleases": true,
	"todohighlight.keywords": [
		"TODO",
		"OPTIMIZE",
		"NOTE",
		{
			"text": "FIXME",
			"backgroundColor": "rgb(223, 80, 32)",
			"overviewRulerColor": "rgb(223, 80, 32)",
			},
		{
			"text": "XXX",
			"backgroundColor": "rgb(223, 32, 80)",
			"overviewRulerColor": "rgb(223, 32, 80)",
		}
	],
	"todohighlight.defaultStyle": {
		"color": "#eee",
		"backgroundColor": "rgb(223, 175, 32)",
		"overviewRulerColor": "rgb(223, 175, 32)",
		"border": "none",
		"borderRadius": "2px"
	},
	"ruby.lint": {
		"ruby": true
	},
	"rust.clippy_preference": "on",
	"trailing-spaces.deleteModifiedLinesOnly": true,
	"trailing-spaces.trimOnSave": true,

	"[ruby]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[rust]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 4,
		"editor.wordWrapColumn": 99
	},
}
