// Platzieren Sie Ihre Einstellungen in dieser Datei, um die Standardeinstellungen zu Ã¼berschreiben.
{
    "editor.fontFamily": "FiraCode-Light",
    "editor.fontSize": 13,
    "editor.lineHeight": 16,
    "editor.lineNumbers": "on",
    "editor.wordWrap": true,
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.renderIndentGuides": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "window.reopenFolders": "all",
    "window.newWindowDimensions": "inherit",
    "search.exclude": {
        "**/target": true
    },
    "trailing-spaces.deleteModifiedLinesOnly": true,
    "trailing-spaces.trimOnSave": true,
    "rust.rustLangSrcPath": "/Users/zargony/.rustup/toolchains/stable-x86_64-apple-darwin/lib/rustlib/src/rust/src",

    "[ruby]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "[rust]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.wrappingColumn": 99,
    },
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
}
