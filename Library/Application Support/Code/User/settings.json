{
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.dragAndDrop": false,
    "editor.fontFamily": "Iosevka Slab",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.guides.bracketPairs": true,
    "editor.guides.indentation": true,
    "editor.insertSpaces": false,
    "editor.lineHeight": 20,
    "editor.lineNumbers": "on",
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [79, 99],
    "editor.tabSize": 4,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    "redhat.telemetry.enabled": false,
    "search.exclude": {
        "**/target": true,
        "**/vendor": true
    },
    "search.smartCase": true,
    "terminal.external.osxExec": "Alacritty.app",
    "terminal.integrated.fontSize": 14,
    "window.autoDetectColorScheme": true,
    "window.closeWhenEmpty": true,
    "window.newWindowDimensions": "inherit",
    "window.restoreWindows": "all",
    "workbench.colorTheme": "Bearded Theme Light",
    "workbench.fontAliasing": "auto",
    "workbench.iconTheme": "file-icons",
    "workbench.settings.editor": "json",
    "workbench.preferredDarkColorTheme": "Bearded Theme Anthracite",
    "workbench.preferredLightColorTheme": "Bearded Theme Light",

    "[json]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "modifications",
    },
    "[rust]": {
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.tabSize": 4,
        "editor.wordWrapColumn": 99
    },
    "[tf]": {
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "modifications",
        "editor.tabSize": 2,
    },
    "[toml]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "modifications",
    },
    "[yaml]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "modifications",
    },

    "crates.listPreReleases": true,

    "gitlens.currentLine.enabled": false,

    "gitProjectManager.baseProjectsFolders": ["~/Projects"],
    "gitProjectManager.displayProjectPath": true,
    "gitProjectManager.ignoredFolders": ["node_modules", "target", ".sync"],
    "gitProjectManager.searchInsideProjects": false,
    "gitProjectManager.storeRepositoriesBetweenSessions": true,

    // "rust-analyzer.cargo.allFeatures": true,
    // "rust-analyzer.checkOnSave.enable": false,
    // "rust-analyzer.inlayHints.chainingHints": false,
    // "rust-analyzer.inlayHints.enable": false,
    // "rust-analyzer.inlayHints.parameterHints": false,
    // "rust-analyzer.inlayHints.smallerHints": false,
    // "rust-analyzer.inlayHints.typeHints": false,

    "telemetry.enableCrashReporter": true,
    "telemetry.enableTelemetry": false,

    "todohighlight.keywords": [
        "TODO",
        "OPTIMIZE",
        "NOTE",
        {
            "text": "FIXME",
            "backgroundColor": "rgb(223, 80, 32)",
            "overviewRulerColor": "rgb(223, 80, 32)",
            },
        {
            "text": "XXX",
            "backgroundColor": "rgb(223, 32, 80)",
            "overviewRulerColor": "rgb(223, 32, 80)",
        }
    ],
    "todohighlight.defaultStyle": {
        "color": "#eee",
        "backgroundColor": "rgb(223, 175, 32)",
        "overviewRulerColor": "rgb(223, 175, 32)",
        "border": "none",
        "borderRadius": "2px"
    },

    "trailing-spaces.deleteModifiedLinesOnly": true,
    "trailing-spaces.trimOnSave": true,

    "vs-kubernetes": {
        "vs-kubernetes.kubectl-path": "/opt/homebrew/bin/kubectl",
        "vs-kubernetes.helm-path": "/opt/homebrew/bin/helm",
    },

    "vsicons.dontShowNewVersionMessage": true,
}
