{
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.cursorWidth": 2,
	"editor.dragAndDrop": false,
	"editor.fontFamily": "PragmataPro",
	"editor.fontLigatures": true,
	"editor.fontSize": 16,
	"editor.insertSpaces": false,
	"editor.letterSpacing": 0.2,
	"editor.lineHeight": 20,
	"editor.lineNumbers": "on",
	"editor.minimap.enabled": true,
	"editor.minimap.showSlider": "always",
	"editor.renderControlCharacters": true,
	"editor.renderIndentGuides": true,
	"editor.renderLineHighlight": "all",
	"editor.renderWhitespace": "boundary",
	"editor.tabSize": 4,
	"workbench.fontAliasing": "antialiased",
	"workbench.iconTheme": "material-icon-theme",
	"window.closeWhenEmpty": true,
	"window.newWindowDimensions": "inherit",
	"window.restoreWindows": "all",
	"explorer.openEditors.visible": 0,
	"search.exclude": {
		"**/target": true,
		"**/vendor": true
	},
	"search.smartCase": true,
	"update.channel": "default",
	"terminal.external.osxExec": "iTerm.app",
	"terminal.integrated.fontSize": 14,
	"todohighlight.keywords": [
		"TODO",
		"OPTIMIZE",
		"NOTE",
		{
			"text": "FIXME",
			"backgroundColor": "rgb(223,82,58)",
			"overviewRulerColor": "rgba(223,82,58,0.8)",
			"border": "1px solid rgb(223,82,58)",
			},
		{
			"text": "XXX",
			"backgroundColor": "rgb(245,0,87)",
			"overviewRulerColor": "rgb(245,0,87)",
			"border": "1px solid rgb(245,0,87)",
		}
	],
	"todohighlight.defaultStyle": {
		"color": "#eee",
		"backgroundColor": "rgb(204,151,33)",
		"overviewRulerColor": "rgba(204,151,33,0.8)",
		"border": "1px solid rgb(204,151,33)",
		"borderRadius": "2px"
	},
	"ruby.lint": {
		"ruby": true
	},
	"trailing-spaces.deleteModifiedLinesOnly": true,
	"trailing-spaces.trimOnSave": true,

	"[ruby]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[rust]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 4,
		"editor.wordWrapColumn": 99
	}
}
